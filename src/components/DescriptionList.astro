---
export interface Props {
  title: string;
  data: { name: string; description: string }[];
}
const { title, data } = Astro.props;
---

<div>
  <div class="pt-8 prose">
    <!-- <h2 class="font-medium text-gray-500">Machined Kettle</h2> -->
    <h3>{title}</h3>
  </div>

  <dl class="mt-8 space-y-8">
    {
      data.map((item) => (
        <div>
          <dt class="text-base font-medium text-gray-900">{item.name}</dt>
          <dd class="mt-3 text-base text-gray-500">{item.description}</dd>
        </div>
      ))
    }
  </dl>
</div>
